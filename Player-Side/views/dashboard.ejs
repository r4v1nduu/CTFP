<%- include('layout') %>

<% if (errorMessage) { %>
    <div class="alert alert-danger"><%= errorMessage %></div>
<% } %>

<main class="container mt-5">
    <section class="mb-5">
        <div class="alert alert-warning mb-4" role="alert">
            <h3>Total Points: <%= user.total_points %></h3>
        </div>
        <h3 class="mb-3">Player Details :</h3>
        <p><strong>First Name:</strong> <%= user.first_name %></p>
        <p><strong>Last Name:</strong> <%= user.last_name %></p>
    </section>

    <section class="mb-5">
        <h5>Submit Flags :</h5>
        <form action="/submit-flag" method="post">
            <div class="form-group"></div>
                <input type="text" class="form-control" id="flag" name="flag" required>
            </div>
            <button type="submit" class="btn btn-danger mt-2">Submit</button>
        </form>
    </section>

    <section class="mb-5">
        <h3>Submitted Flags :</h3>
        <ul class="list-group">
            <% flags.forEach(flag => { %>
                <li class="list-group-item"><%= flag.flag %></li>
            <% }); %>
        </ul>
    </section>
</main>
